<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".EdgeCropperActivity">


    <include layout="@layout/lay_top"/>
    <ImageView
        android:id="@+id/imgTest"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/layOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#D9D9D9"
            android:layout_margin="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="Select photo from Gallery"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_margin="12dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#D9D9D9"
            android:layout_margin="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="Capture photo from Camera"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_margin="12dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/imgView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <com.labters.documentscanner.DocumentScannerView
        android:id="@+id/document_scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCrop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_crp"
           />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_more"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_ok"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrint"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_done"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"/>
    </LinearLayout>
</LinearLayout>