<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EdgeCropperActivity">


    <include layout="@layout/lay_top"/>
    <ImageView
        android:id="@+id/imgTest"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/layOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="200dp"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F2F2F3"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/galary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="From Gallery"
                android:textColor="#3E3D3D"
                android:textSize="18sp"
                android:layout_marginBottom="32dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="200dp"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F2F2F3"
            android:layout_margin="16dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ic_8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="From Camera"
                android:textColor="#3E3D3D"
                android:textSize="18dp"
                android:layout_marginBottom="32dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/imgView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <com.labters.documentscanner.DocumentScannerView
        android:id="@+id/document_scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="61dp"
        android:layout_above="@id/layBottom"
        android:background="#9E9E9E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnCrop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:background="@drawable/shape_circle_02"
            android:src="@drawable/ic_crp"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:background="@drawable/shape_circle_02"
            android:src="@drawable/ic_more"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/btnDone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/shape_circle_02"
            android:src="@drawable/baseline_done_24"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/btnPrint"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:padding="8dp"
            android:background="@drawable/shape_circle_02"
            android:src="@drawable/baseline_done_24"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>