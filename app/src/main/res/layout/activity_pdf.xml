<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".PdfActivity">
    <include layout="@layout/lay_top"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCropImage"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:text="@string/crop"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:textSize="13sp"
        android:padding="8dp"
        android:visibility="invisible"
        android:layout_below="@+id/cardBack"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:drawableStart="@drawable/baseline_crop_24"
        />

    <LinearLayout
        android:id="@+id/layOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#D9D9D9"
            android:layout_margin="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="Select photo from Gallery"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_margin="12dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#D9D9D9"
            android:layout_margin="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="Capture photo from Camera"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_margin="12dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/btnCropImage"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/imgView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imgView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
            <ImageView
                android:id="@+id/imgView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="4dp" android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClear"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/ic_clear"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCrop"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/ic_crp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/ic_more"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrint"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/ic_done"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doneBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/baseline_done_24"
            android:backgroundTint="@color/white"
            />


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"/>

    </LinearLayout>

    <com.labters.documentscanner.DocumentScannerView
        android:id="@+id/document_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnCropImage"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />
</RelativeLayout>